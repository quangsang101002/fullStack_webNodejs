<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>get CRUD</title>
  </head>
  <body>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
        border-collapse: collapse;
      }
      .btn-delete,
      .btn-edit {
        outline: none;
        border: none;
        padding: 5px 19px;
        background: orange;
        border-radius: 6px;
        cursor: pointer;
        color: aliceblue;
        font-weight: 600;
      }
      .btn-delete {
        background: red;
      }
    </style>
    <table style="width: 100%">
      <tr>
        <th>id</th>
        <th>Email</th>
        <th>FirstName</th>
        <th>LastName</th>
        <th>Address</th>
        <th>Action</th>
      </tr>

      <% for(let i= 0; i < dataTable.length; i++){ %>
      <tr>
        <td><%=dataTable[i].id%></td>
        <td><%=dataTable[i].email%></td>
        <td><%=dataTable[i].firstName%></td>
        <td><%=dataTable[i].lastName%></td>
        <td><%=dataTable[i].address%></td>
        <td>
          <a
            href="/edit-crud?id=<%=dataTable[i].id%>"
            class="btn-edit"
            type="buttdons"
            >Edit</a
          >
          <a
            href="/delete-crud?id=<%=dataTable[i].id%>"
            class="btn-delete"
            type="buttson"
            >Delete</a
          >
        </td>
      </tr>

      <%}%>
    </table>
  </body>
</html>
